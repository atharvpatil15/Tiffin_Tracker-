/**
 * @fileoverview Firestore Security Rules for TiffinTrack application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user can only access and modify their own data.
 *
 * Data Structure:
 * All user data is nested under /users/{userId}, including profile information and tiffin orders.
 * Tiffin orders are stored in a subcollection /users/{userId}/tiffinOrders/{tiffinOrderId}.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own profiles.
 * - Users can only create, read, update, and delete their own tiffin orders.
 * - Listing all users is disallowed.
 *
 * Denormalization for Authorization:
 *  - Tiffin orders are stored as subcollections of users to enforce path-based ownership, avoiding the need for `get()` calls to verify user ID.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) User 'user_abc' with matching userId creates their profile.
     * @allow (get) User 'user_abc' reads their own profile.
     * @allow (update) User 'user_abc' updates their own profile.
     * @allow (delete) User 'user_abc' deletes their own profile.
     * @deny (create) User 'user_xyz' attempts to create a profile for 'user_abc'.
     * @deny (get) User 'user_xyz' attempts to read profile 'user_abc'.
     * @deny (update) User 'user_xyz' attempts to update profile 'user_abc'.
     * @deny (delete) User 'user_xyz' attempts to delete profile 'user_abc'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to tiffin orders for a specific user.
     * @path /users/{userId}/tiffinOrders/{tiffinOrderId}
     * @allow (create) User 'user_abc' creates a tiffin order under their profile.
     * @allow (get) User 'user_abc' reads their own tiffin order.
     * @allow (update) User 'user_abc' updates their own tiffin order.
     * @allow (delete) User 'user_abc' deletes their own tiffin order.
     * @deny (create) User 'user_xyz' attempts to create a tiffin order for 'user_abc'.
     * @deny (get) User 'user_xyz' attempts to read a tiffin order for 'user_abc'.
     * @deny (update) User 'user_xyz' attempts to update a tiffin order for 'user_abc'.
     * @deny (delete) User 'user_xyz' attempts to delete a tiffin order for 'user_abc'.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/tiffinOrders/{tiffinOrderId} {
       function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return isSignedIn() && request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}